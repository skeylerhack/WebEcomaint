
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/_Layout.cshtml";
}
<link href="~/Content/dash-board.css" rel="stylesheet" />
<link href="~/Content/font-style.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href='@Url.Action("Index", "Dashboard")'>Dashboard</a></li>
        </ol>
    </div>
</div>
<div data-ng-controller="DashChartsController" data-ng-init="fn.Init()">
    <div class="row">
        <!-- User PROFILE BLOCK -->
        <div class="col-sm-4 col-lg-4">
            <div class="dash-unit">
                <dtitle data-lang="lblUserProfile">User Profile</dtitle>
                <hr>
                @*<div class="thumbnail ">
                    <img src="~/img/user-avatar.jpg" class="img-circle">
                </div>*@
                <!-- /thumbnail -->
                <h1>@ViewBag.TenNguoiDung</h1>
                <h3>@ViewBag.Username</h3>
                <h4>@ViewBag.PhongBan</h4>
                <br>
                <input type="hidden" id="somay" value="@ViewBag.SoMay" />
                <div class="info-user">
                    <span aria-hidden="false" class="li_user fs1"></span>
                    <span aria-hidden="false" class="li_settings fs1"></span>
                    <span aria-hidden="false" class="li_mail fs1"></span>
                    <span aria-hidden="false" class="li_key fs1"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-8 col-lg-8">
            <div class="dash-unit">
                <dtitle data-lang="lblTinhTrangPBT">Other Information</dtitle>
                <hr>
                <div class="section-graph">
                    <div id="importantchart"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-lg-6">
            <div class="dash-unit">
                <dtitle data-lang="lblHienTrangSuDungMay">Hiện Trạng Sử Dụng Máy</dtitle>
                <hr>
                <div class="section-graph-all">
                    <div id="load"></div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-6">
            <div class="dash-unit">
                <dtitle data-lang="lblTinhTrangTB">Tình Trang Thiết Bị</dtitle>
                <hr>
                <div class="section-graph-all">
                    <div id="space"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            <div class="dash-unit">
                <dtitle data-lang="lblTongQuanPBT">Tổng Quan Phiếu Bảo Trì</dtitle>
                <hr>
                <div class="section-graph-all">
                    <div id="linechart">
                    </div>
                </div>
            </div>
        </div>
        @*<div class="col-sm-4 col-lg-4">
                <div class="dash-unit">
                    <dtitle>Last Month Revenue</dtitle>
                    <hr>
                    <div class="cont">
                        <p>
                            <bold>$879</bold>
