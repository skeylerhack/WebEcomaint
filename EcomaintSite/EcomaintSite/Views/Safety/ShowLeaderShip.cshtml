@model List<Model.Data.LeaderShipViewModel>
@{
    Layout = "~/Views/_Layout.cshtml";
}
<link href="~/Content/magic-check.min.css" rel="stylesheet" />

<style>

</style>

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href='#' data-lang="lblSafety">An toàn</a></li>
            <li class="breadcrumb-item active" data-lang="lblLeaderShip">Kiểm toán</li>
        </ol>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div ng-controller="LeaderShipController" ng-init="fn.Init()">
        <div class="row" id="frmMain">
            <div class="col-lg-12">
                <div class="card-box">
                    <div class="row ">
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                            <div class="form-group responsive">
                                <label data-lang="lblCreatedBy">CreatedBy</label>
                                <input type="text" class="form-control" id="txtCreatedBy" value="@ViewBag.UserName" disabled />
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                            <div class="form-group responsive">
                                <label data-lang="lblREPORT_PARENT">REPORT_PARENT</label>
                                @Html.DropDownList("cbReport", ViewBag.ListReportParent as SelectList, new { name = "cbReport", data_slide = "left", @class = "form-control select2-container--classic", @style = "width:100%" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                            <div class="form-group responsive">
                                <label data-lang="lblTungay">Từ ngày</label>
                                <input class="form-control" type="text" id="fromDate" data-type="datepicker" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                            </div>
                        </div>
                    </div>
                </div>

                <div id="divButtonDefault" class="toolbar-action">
                    <a href='@Url.Action("ShowLeaderShip", "Safety")' data-lang="btnRefresh" id="btnRefresh" class="btn btn-default pull-right" style="margin-top: 40px;">
                        <i class="fa fa-refresh" aria-hidden="true"></i>
                    </a>
                    <button ng-click="fn.CheckValidateControl();" type="button" data-lang="btnGhi" id="btnSave" class="btn btn-default pull-right" style="margin-top: 40px;">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    </button>
                </div>


                <div class="card-box">
                    <div class="row">
                        <div class="col-lg-12">
                            @*                            <h5 class="card-title" data-lang="lblListStopCardDetails1">Danh sách báo cáo oan toàn chi tiếc</h5>*@
                            <div class="table-responsive" style="overflow: auto">
                                <table id="tbShowListDeails" class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th data-lang="STT">STT</th>
                                            <th data-lang="IDLeadership" class="hidden">IDLeadership</th>
                                            <th data-lang="Content">Content</th>
                                            <th data-lang="Yes">Yes</th>
                                            <th data-lang="No">No</th>
                                            <th data-lang="NA">NA</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr data-id="@item.IDLeadership">
                                                    <td style="width:15px; text-align:center"> @item.STT </td>
                                                    <td class="hidden">@item.IDLeadership</td>
                                                    <td style="width:500px"> @item.Content</td>
                                                    <td style="width:15px; text-align:center"><input type="checkbox" class="custom-control-input" value="@item.Yes" data-chon="yes"></td>
                                                    <td style="width:15px; text-align:center"><input type="checkbox" class="custom-control-input" value="@item.No" data-chon="no"></td>
                                                    <td style="width:15px; text-align:center"><input type="checkbox" class="custom-control-input" value="@item.NA" data-chon="na"></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>

                <div id="divButtonFloat" class="kc_fab_wrapper"></div>
            </div>
        </div>
    </div>
}

<script>
    var urlResetLeaderShip = '@Url.Action("ShowLeaderShip", "Safety")';
    var urlSaveLeaderShip = '@Url.Action("SaveLeaderShip", "Safety")';
    require(['LeaderShipController'])
</script>
